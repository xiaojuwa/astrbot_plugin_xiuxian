{
  "ACCESS_CONTROL": {
    "description": "访问控制",
    "type": "object",
    "items": {
      "WHITELIST_GROUPS": {
        "description": "白名单群号列表",
        "type": "list",
        "default": [],
        "hint": "请添加允许使用此插件的QQ群号。留空则表示所有群聊都可用。"
      }
    }
  },
  "VALUES": {
    "description": "核心数值配置",
    "type": "object",
    "items": {
      "INITIAL_GOLD": {
        "description": "初始灵石",
        "type": "int",
        "default": 100,
        "hint": "新玩家创建角色时获得的初始灵石数量。"
      },
      "CHECK_IN_REWARD_MIN": {
        "description": "签到最小奖励",
        "type": "int",
        "default": 50,
        "hint": "每日签到可获得的最小灵石数量。"
      },
      "CHECK_IN_REWARD_MAX": {
        "description": "签到最大奖励",
        "type": "int",
        "default": 200,
        "hint": "每日签到可获得的最大灵石数量。"
      },
      "BASE_EXP_PER_MINUTE": {
        "description": "每分钟闭关修为",
        "type": "int",
        "default": 10,
        "hint": "玩家在 “闭关” 状态下，每分钟获得的基础修为值。"
      },
      "CULTIVATION_HP_RECOVERY_RATIO": {
        "description": "闭关回血比例",
        "type": "float",
        "default": 0.1,
        "hint": "闭关结束时，恢复的气血值 = 获得的修为 * 此比例。例如0.1代表恢复修为10%的血量。"
      },
      "REROLL_SPIRIT_ROOT_COST": {
        "description": "重置灵根花费",
        "type": "int",
        "default": 10000,
        "hint": "执行\"重入仙途\"指令，重新随机灵根需要消耗的灵石数量。"
      },
      "BREAKTHROUGH_FAIL_PUNISHMENT_RATIO": {
        "description": "突破失败惩罚率",
        "type": "float",
        "default": 0.1,
        "hint": "突破失败时，损失的修为占晋升所需修为的比例（0.1 = 10%）。"
      },
      "CREATE_SECT_COST": {
        "description": "创建宗门花费",
        "type": "int",
        "default": 5000,
        "hint": "创建宗门需要消耗的灵石数量。"
      },
      "WORLD_BOSS_TOP_PLAYERS_AVG": {
        "description": "世界Boss等级参考人数",
        "type": "int",
        "default": 5,
        "hint": "生成世界Boss时，参考服务器战力排名前N的玩家的平均等级。"
      },
      "SHOP_DAILY_ITEM_COUNT": {
        "description": "每日商店商品数量",
        "type": "int",
        "default": 8,
        "hint": "每日坊市随机上架的商品种类数量。"
      }
    }
  },
  "REALM_RULES": {
    "description": "秘境生成规则",
    "type": "object",
    "items": {
      "REALM_BASE_FLOORS": {
        "description": "秘境基础层数",
        "type": "int",
        "default": 3
      },
      "REALM_FLOORS_PER_LEVEL_DIVISOR": {
        "description": "境界等级影响层数的除数",
        "type": "int",
        "default": 2,
        "hint": "每 N 个境界等级，秘境增加1层。例如，值为2时，每2级增加1层。"
      },
      "REALM_MONSTER_CHANCE": {
        "description": "秘境遇怪概率",
        "type": "float",
        "default": 0.7,
        "hint": "在秘境中遇到怪物事件的概率（0.0到1.0之间）。"
      },
      "REALM_BOSS_SCALING_FACTOR": {
        "description": "秘境Boss强度系数",
        "type": "float",
        "default": 0.7,
        "hint": "秘境最终Boss的强度缩放系数（例如0.7代表70%强度）。"
      }
    }
  },
  "SPIRIT_ROOT_SPEEDS": {
    "description": "灵根修炼速度倍率",
    "type": "object",
    "items": {
      "WUXING_ROOT_SPEED": {
        "description": "五行灵根",
        "type": "float",
        "default": 1.0
      },
      "VARIANT_ROOT_SPEED": {
        "description": "变异灵根",
        "type": "float",
        "default": 1.2
      },
      "HEAVENLY_ROOT_SPEED": {
        "description": "天灵根",
        "type": "float",
        "default": 1.5
      },
      "FUSION_ROOT_SPEED": {
        "description": "融合灵根",
        "type": "float",
        "default": 1.8
      },
      "CHAOS_ROOT_SPEED": {
        "description": "混沌灵根",
        "type": "float",
        "default": 2.0
      }
    }
  },
  "FILES": {
    "description": "文件路径配置",
    "type": "object",
    "items": {
      "DATABASE_FILE": {
        "description": "数据库文件名",
        "type": "string",
        "default": "xiuxian_data.db",
        "hint": "存储玩家数据的SQLite数据库文件名。"
      }
    }
  },
  "REDEEM_CODES": {
    "description": "激活码配置（橘的恩赐）",
    "type": "list",
    "default": [],
    "hint": "配置激活码列表，每个激活码包含：code(激活码)、max_uses(最大使用次数)、rewards(奖励列表)。玩家使用「橘的恩赐 激活码」指令兑换。",
    "items": {
      "type": "object",
      "items": {
        "code": {
          "description": "激活码",
          "type": "string",
          "default": "",
          "hint": "激活码内容，支持中文，如：新年快乐2025"
        },
        "max_uses": {
          "description": "最大使用次数",
          "type": "int",
          "default": 100,
          "hint": "该激活码最多可被多少人使用，0表示无限制"
        },
        "gold": {
          "description": "赠送灵石",
          "type": "int",
          "default": 0,
          "hint": "兑换后赠送的灵石数量"
        },
        "exp": {
          "description": "赠送修为",
          "type": "int",
          "default": 0,
          "hint": "兑换后赠送的修为数量"
        },
        "items": {
          "description": "赠送物品",
          "type": "list",
          "default": [],
          "hint": "赠送的物品列表，格式：[{\"name\": \"物品名\", \"quantity\": 数量}]",
          "items": {
            "type": "object",
            "items": {
              "name": {
                "description": "物品名称",
                "type": "string",
                "default": ""
              },
              "quantity": {
                "description": "数量",
                "type": "int",
                "default": 1
              }
            }
          }
        },
        "description": {
          "description": "激活码描述",
          "type": "string",
          "default": "",
          "hint": "激活码的描述信息，会在兑换成功时显示"
        }
      }
    }
  }
}